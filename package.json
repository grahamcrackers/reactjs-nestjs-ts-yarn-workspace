{
    "name": "@react-nestjs/workspace",
    "version": "1.0.0",
    "main": "index.js",
    "author": "Graham Rogers",
    "license": "MIT",
    "private": "true",
    "workspaces": [
        "apps/*",
        "libs/*"
    ],
    "scripts": {
        "backend": "yarn workspace @react-nestjs/backend",
        "frontend": "yarn workspace @react-nestjs/frontend",
        "shared": "yarn workspace @react-nestjs/shared",
        "nestjs": "yarn workspace @react-nestjs/nestjs",
        "react": "yarn workspace @react-nestjs/react",
        "tsdx": "yarn workspace @react-nestjs/tsdx"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.15.0",
        "@typescript-eslint/parser": "^4.15.0",
        "eslint": "^7.19.0",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react": "^7.22.0",
        "husky": "4.3.8",
        "lint-staged": ">=10",
        "prettier": "^2.2.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix"
        ],
        "*.js": "eslint --cache --fix"
    }
}
